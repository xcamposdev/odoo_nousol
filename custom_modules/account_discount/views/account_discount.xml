<?xml version="1.0" ?>

<odoo>
    <record id="account_move_form_discount_form_view" model="ir.ui.view">
        <field name="name">account.move.form.discount.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_untaxed']" position="before">
                <field name="x_discount_pp" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}" />
                <field name="x_discount_percent" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}" />
            </xpath>

            <xpath expr="//field[@name='price_subtotal']" position="replace">
                <field name="x_price_subtotal_ui" string="Subtotal" groups="account.group_show_line_subtotals_tax_excluded" force_save="1"/>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[2]/field[@name='line_ids']/tree[1]/field[@name='tax_ids']" position="after">
                <field name="x_price_subtotal_ui" invisible="1" force_save="1"/>
            </xpath>

        </field>
    </record>
</odoo>
