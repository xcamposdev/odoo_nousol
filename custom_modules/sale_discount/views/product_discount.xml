<odoo>
    
    <data noupdate="1">
        <!-- definimos variables de entorno -->
        <record id="x_producto_descuento_pp" model="ir.config_parameter">
            <field name="key">x_producto_descuento_pp</field>
            <field name="value">Descuento PP</field>
        </record>
    </data>

    <data>
        <record id="view_product_template_common_form_custom_inherited" model="ir.ui.view">
            <field name="name">view.product.template.common.form.custom.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='inventory']/group[@name='inventory']/group[@name='group_lots_and_weight']/label[1]" position="after"> -->
                <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='inventory']/group[@name='inventory']/group[@name='group_lots_and_weight']/div[@name='weight']" position="after">
                    <label for="x_alto" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                    <div class="o_row" name="x_alto" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">
                        <field name="x_alto"/>
                        <span></span>
                    </div>
                    <label for="x_largo" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                    <div class="o_row" name="x_largo" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">
                        <field name="x_largo"/>
                        <span></span>
                    </div>
                    <label for="x_ancho" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                    <div class="o_row" name="x_ancho" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">
                        <field name="x_ancho"/>
                        <span></span>
                    </div>
                </xpath>
            </field>
        </record>
    </data>

</odoo>