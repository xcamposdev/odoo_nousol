<?xml version="1.0" ?>

<odoo>
    <record id="sale_order_general_discount_form_view" model="ir.ui.view">
        <field name="name">sale.order.general.discount.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_untaxed']" position="before">
                <field name="x_discount_pp" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}" />
                <field name="x_discount_percent" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}" />
            </xpath>

        </field>
    </record>
</odoo>
