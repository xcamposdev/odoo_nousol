<odoo>
    <data noupdate="1">
        <record id="x_prestashop_crud" model="ir.config_parameter">
            <field name="key">x_prestashop_crud</field>
            <field name="value">0</field>
        </record>
    </data>

    <data>

        <record id="view_prestashop_store_details" model="ir.ui.view">
            <field name="name">prestashop store Details</field>
            <field name="model">prestashop.store.details</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="prestashop Store Details">
                    <field name="name"/>
                    <field name="prestashop_api_key"/>
                    <field name="prestashop_api_url"/>
                </tree>
            </field>
        </record>
        <record id="view_form_prestashop_store_details" model="ir.ui.view">
            <field name="name">prestashop Store Details</field>
            <field name="model">prestashop.store.details</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="prestashop Store Details">
                    <header>
                        <button type="object" name="import_categories_from_prestashop" string="Importar Categorías" class="oe_highlight"/>
                        <button type="object" name="import_products_from_prestashop" string="Importar Productos" class="oe_highlight"/>
                        <button type="object" name="import_order_from_prestashop" string="Importar Ordenes" class="oe_highlight"/>
                        <button type="object" name="import_product_attribute_from_prestashop" string="Importar Attributo del Producto" class="oe_highlight"/>
                        <button type="object" name="import_product_stock_from_prestashop" string="Importar Stock del Producto" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="action_view_prestashop_categories" class="oe_stat_button" icon="fa-book" string="Categorías de productos"/>
                            <button type="object" name="action_view_prestashop_product" class="oe_stat_button" icon="fa-cubes" string="Productos"/>
                            <button type="object" name="action_view_prestashop_product_detail" class="oe_stat_button" icon="fa-cubes" string="Variante de productos"/>
                            <button type="object" name="action_view_prestashop_customers" class="oe_stat_button" icon="fa-user" string="Clientes"/>
                            <button type="object" name="action_view_prestashop_orders" class="oe_stat_button" icon="fa-cart-plus" string="Ordenes"/>
                            <button type="object" name="action_view_prestashop_message_detail" class="oe_stat_button" icon="fa-book" string="Mensajes"/>
                        </div>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="prestashop_api_key" required="1"/>
                                <field name="prestashop_api_url" widget="url" required="1"/>
                                <field name="warehouse_id" required="1"/>
                                <field name="start_range" required="1"/>
                                <field name="end_range" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_prestashop_store_details" model="ir.actions.act_window">
            <field name="name">prestashop Store Details</field>
            <field name="res_model">prestashop.store.details</field>
            <field name='view_mode'>tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a prestashop Store Details.
                </p>
            </field>
        </record>

        <menuitem name="Prestashop" id="prestashop_integration"
            web_icon="odoo_prestashop_integration,static/description/icon.png"
            sequence="4" />
        <menuitem name="prestashop Store Details" id="menu_prestashop_store_details"
                  parent="prestashop_integration" action="action_prestashop_store_details"
                  sequence="1"/>


    </data>
</odoo>

