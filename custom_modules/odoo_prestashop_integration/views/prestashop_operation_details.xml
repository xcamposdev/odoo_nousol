<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_prestashop_operation_tree_view" model="ir.ui.view">
            <field name="name">prestashop Operation</field>
            <field name="model">prestashop.operation</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="prestashop Operation Detail" create='false'>
                    <field name="name"/>
                    <field name="prestashop_store_id"/>
                    <field name="prestashop_operation"/>
                    <field name="prestashop_operation_type"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record id="view_form_prestashop_operation_detail" model="ir.ui.view">
            <field name="name">prestashop Operation</field>
            <field name="model">prestashop.operation</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="prestashop Operation Detail" create='false'>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"></field>
                                <field name="prestashop_store_id" readonly="1"/>
                                <field name="prestashop_operation" readonly="1"/>
                                <field name="prestashop_operation_type" readonly="1"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="company_id" readonly="1"/>
                                <field name="prestashop_message" readonly="1"/>
                            </group>
                        </group>
                        <group string="prestashop Operation Details" colspan="4">
                            <field name="operation_ids" nolabel="1" readonly="1">
                                <tree decoration-danger="fault_operation==True">
                                    <field name="prestashop_operation_type" invisible="1"/>

                                    <field name="prestashop_operation" invisible="1"/>
                                    <field name="company_id" readonly="1"/>


                                    <field name="fault_operation"/>
                                    <field name="process_message"/>
                                </tree>
                            </field>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_prestashop_operation_details" model="ir.ui.view">
            <field name="name">prestashop Operation Details</field>
            <field name="model">prestashop.operation.details</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="prestashop Operation Details" create='false'>
                    <field name="prestashop_operation"/>
                    <field name="operation_id"/>
                    <field name="prestashop_operation_type"/>

                    <field name="prestashop_request_message"/>
                    <field name="prestashop_response_message"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record id="view_form_prestashop_operation_details" model="ir.ui.view">
            <field name="name">prestashop Operation Details</field>
            <field name="model">prestashop.operation.details</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="prestashop Operation Details" create='false'>
                    <sheet>
                        <group readonly="1">
                            <group>

                                <field name="prestashop_request_message"/>
                                <field name="prestashop_response_message"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_prestashop_operation" model="ir.actions.act_window">
            <field name="name">prestashop Operation</field>
            <field name="res_model">prestashop.operation</field>
            <field name="view_id" ref="view_prestashop_operation_tree_view"/>
        </record>

        <record id="action_prestashop_operation_details" model="ir.actions.act_window">
            <field name="name">Fault Data</field>
            <field name="res_model">prestashop.operation.details</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('fault_operation','=',True)]</field>
        </record>


        <menuitem id="menu_prestashop_operation_detail" name="prestashop Process Details"
                  parent="prestashop_integration" sequence="2"
                  action="action_prestashop_operation"/>


        <menuitem id="menu_prestashop_operation_details" name="Fault Details"
                  parent="prestashop_integration" sequence="3"
                  action="action_prestashop_operation_details"/>
    </data>
    <data noupdate="1">
        <record id="seq_prestashop_operation_detail" model="ir.sequence">
            <field name="name">prestashop Operation</field>
            <field name="code">prestashop.operation</field>
            <field name="padding">5</field>
            <field name="prefix">prestashop-</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>