<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="prestashop_view_product_template_field" model="ir.ui.view">
            <field name="name">product.template.fields</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook/page[last()]" position="after">
                    <page string="Prestashop Information">
                        <group>
                            <group>
                                <field name="prestashop_product" readonly="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>


        <record id="prestashop_view_product_product_field" model="ir.ui.view">
            <field name="name">product.product.fields</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook/page[last()]" position="after">
                    <page string="Prestashop Information">
                        <field name="prestashop_mapping_ids" nolabel="1" readonly="1">
                            <tree>
                                <field name="product_id"/>
                                <field name="prestashop_store_id"/>
                                <field name="prestashop_product_id"/>
                                <field name="product_combination_id"/>
                                <field name="product_stock_id"/>
                                <field name="qty_available_in_odoo"/>
                                <field name="qty_available_in_prestashop"/>
                                <button type='object' class="fa fa-arrow-right oe_link" name="export_product_qty_in_prestashop"
                                        string="Export QTY In Prestashop"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>